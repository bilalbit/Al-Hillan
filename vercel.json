{
  "version": 2,
  "builds": [
    {
      "src": "src/**/*.js",
      "use": "@vercel/next",
      "config": {
        "distDir": "src/.next"
      }
    },
    {
      "src": "api/app/main.py",
      "use": "@vercel/python",
      "config": {
        "installCommand": "pip install -r ../requirements.txt"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "api/app/main.py"
    },
    {
      "src": "/(.*)",
      "dest": "src/$1"
    }
  ]
}