{
  "version": 2,
  "builds": [
    {
      "src": "api/app/main.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "15mb" }
    },
    {
      "src": "package.json",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/app/main.py"
    },
    {
      "src": "/(.*)",
      "dest": "/"
    }
  ],
  "env": {
    "APP_MODULE": "app.main:app"
  },
  "functions": {
    "api/app/main.py": {
      "memory": 1024,
      "maxDuration": 10
    }
  },
  "gitignore": [
    ".env",
    "api/.env",
    ".venv/**",
    "**/__pycache__/**",
    "*.pyc",
    "node_modules/**"
  ]
}