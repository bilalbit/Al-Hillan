{
  "version": 2,
  "builds": [
    {
      "src": "src/next.config.js",
      "use": "@vercel/next",
      "config": {
        "distDir": ".next",
        "ignoreBuildScript": true
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "https://al-hillan.onrender.com/"
    },
    {
      "src": "/(.*)",
      "dest": "/src/$1"
    }
  ],
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://al-hillan.onrender.com/:path*"
    }
  ]
}